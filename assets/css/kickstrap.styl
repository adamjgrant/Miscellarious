.uikit
	background-image: url('/img/papersprite.png')
	width: 300px
	height: 300px
	&-book
		width: 180px
		height: 130px
		background-position: -390px -226px
		cursor: pointer
		&:hover
			background-position: -390px -408px
	&-note
		width: 175px
		height: 175px
		background-position: 0px 0px
		position: absolute !important
		.movebar
			height: 30px
			width: 175px
			background-color: red
		input.transparent
			opacity: 0
			pointer-events: none
			margin-top: -900px
		textarea
			background-color: transparent
			border: 0px
			width: 140px
			margin: 0px auto
			display: block
			height: 130px
			&.textarea-focused
				background-color: white
				&:hover
					background-color: white
			&:hover
				background-color: rgba(0, 0, 0, 0.05)

[draggable]
	-moz-user-select: none
	-khtml-user-select: none
	-webkit-user-select: none
	user-select: none
	-khtml-user-drag: element
	-webkit-user-drag: element

.loading-book
	position: absolute
	top: 50%
	left: 50%
	margin-top: (-1/2 * 130px)
	margin-left: (-1/2 * 170px)
	h4
		text-align: center

$brown = rgba(242, 239, 235, 0.9)

$footerHeight = 50px
body
	padding-top: 70px // For fixed navbar
	.ks-beforeload
		display: block
	.ks-afterload
		display: none
	&.loaded
		.ks-beforeload
			display: none
		.ks-afterload
			display: block

// Sticky Footer

html
, body
	height: 100%

#sf-wrap
	min-height: 100%
	height: auto !important
	height: 100%
	margin 0 auto (-1 * $footerHeight)
	padding: 0 0 $footerHeight

#sf-footer
	height: $footerHeight

#sf-push
	padding-top: $footerHeight
	display: block